#!/usr/bin/env python

from lpeManager.db import db, User, Lang, Role
from lpeManager import app

print app.config['SQLALCHEMY_DATABASE_URI']
db.drop_all()
db.create_all()
u = User()
u.username='admin'
u.set_password('mdp')
db.session.add(u)
fr = Lang('fr')
db.session.add(fr)
en = Lang('en')
db.session.add(en)
user = Role('User')
db.session.add(user)
admin = Role('Admin')
db.session.add(admin)
db.session.commit()
